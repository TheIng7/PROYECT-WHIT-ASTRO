    .sidebar {
      width: 280px;
    }
  }

  @media (max-width: 768px) {
    .sidebar {
      width: 100%;
      height: auto;
      position: static;
    }
  }
</style>

<script>
  // Funcionalidades del sidebar
  document.addEventListener('DOMContentLoaded', function() {
    // Efectos hover mejorados
    const navItems = document.querySelectorAll('.nav-item');
    
    navItems.forEach(item => {
      item.addEventListener('mouseenter', function() {
        this.style.transform = 'translateX(8px)';
      });
      
      item.addEventListener('mouseleave', function() {
        if (!this.classList.contains('active')) {
          this.style.transform = 'translateX(0)';
        }
      });
    });

    // Simular notificaciones en tiempo real
    function updateLiveBadges() {
      const badges = document.querySelectorAll('.nav-badge:not(.hot):not(.new)');
      badges.forEach(badge => {
        const current = parseInt(badge.textContent);
        if (current > 0 && Math.random() > 0.7) {
          badge.textContent = current + 1;
          badge.style.animation = 'pulse 0.5s ease-in-out';
          setTimeout(() => {
            badge.style.animation = '';
          }, 500);
        }
      });
    }

    // Actualizar badges cada 10 segundos
    setInterval(updateLiveBadges, 10000);

    // Botones de acci√≥n
    const actionBtns = document.querySelectorAll('.action-btn');
    actionBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        this.style.transform = 'scale(0.95)';
        setTimeout(() => {
          this.style.transform = '';
        }, 150);
      });
    });

    // Logout button
    const logoutBtn = document.querySelector('.logout-btn');
    if (logoutBtn) {
      logoutBtn.addEventListener('click', function() {
        if (confirm('¬øEst√°s seguro de que quieres cerrar sesi√≥n?')) {
          console.log('Cerrando sesi√≥n...');
          // Aqu√≠ ir√≠a la l√≥gica de logout
        }
      });
    }
  });
</script>