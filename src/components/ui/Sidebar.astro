    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    padding: 0.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .action-btn:hover {
    background: #00c8ff;
    transform: scale(1.1);
  }

  /* SECCIONES DE NAVEGACI√ìN */
