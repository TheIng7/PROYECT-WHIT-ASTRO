  }

  .nav-section {
    margin-bottom: 2rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .section-title {
    color: #00c8ff;
    font-size: 0.9rem;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 0.5px;
    margin: 0;
  }

  .section-badge {
    background: #00c853;
    color: white;
    font-size: 0.7rem;
    padding: 0.2rem 0.5rem;
