---
// src/components/betting/SportsEvent.astro
import { placeBet } from '../../stores/userStore';

const events = [
  {
    id: 1,
    sport: 'Fútbol',
    teams: ['Barcelona', 'Real Madrid'],
    date: '2024-01-15 20:00',
    odds: {
      home: 2.10,
      draw: 3.25,
      away: 3.50
    }
  }
];
---

<div class="sports-events">
  {events.map(event => (
    <div class="event-card">
      <div class="event-header">
        <span class="sport-badge">⚽ {event.sport}</span>
        <span class="event-time">{event.date}</span>
      </div>
      
      <div class="teams">
        <div class="team">
          <span class="team-name">{event.teams[0]}</span>
          <button class="odds-btn" onclick="placeBetHelper(${event.id}, 'home', ${event.odds.home})">
            {event.odds.home}
          </button>
        </div>
        
        <div class="vs">VS</div>
        
        <div class="team">
          <span class="team-name">{event.teams[1]}</span>
          <button class="odds-btn" onclick="placeBetHelper(${event.id}, 'away', ${event.odds.away})">
            {event.odds.away}
          </button>
        </div>
      </div>
      
      <div class="draw-option">
        <span>Empate</span>
        <button class="odds-btn" onclick="placeBetHelper(${event.id}, 'draw', ${event.odds.draw})">
          {event.odds.draw}
        </button>
      </div>
    </div>
  ))}
</div>

<script>
  function placeBetHelper(eventId, betType, odds) {
    const amount = parseFloat(prompt('Monto a apostar:'));
    if (amount && amount > 0) {
      const betData = {
        eventId,
        betType,
        odds,
        amount,
        potentialWin: amount * odds,
        timestamp: new Date()
      };
      
      // placeBet(betData);
      console.log('Apuesta colocada:', betData);
    }
  }
</script>

<style>
  .event-card {
    background: #2a2a2a;
    border-radius: 8px;
    padding: 1rem;
    margin: 1rem 0;
    border-left: 4px solid #00c853;
  }
  
  .teams {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 1rem 0;
  }
  
  .team {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }
  
  .odds-btn {
    background: #00c853;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    margin-top: 0.5rem;
    cursor: pointer;
    font-weight: bold;
  }
  
  .vs {
    color: #888;
    font-weight: bold;
    margin: 0 1rem;
  }
</style>