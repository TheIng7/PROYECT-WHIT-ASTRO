<div class="sports-events">
  {events.map(event => (
    <div class="event-card">
      <div class="event-header">
        <span class="league">{event.league}</span>
        <span class="time">{event.time}</span>
      </div>
      
      <div class="teams">
        <div class="team">
          <span class="team-name">{event.teamA}</span>
        </div>
        <div class="vs">VS</div>
        <div class="team">
          <span class="team-name">{event.teamB}</span>
        </div>
      </div>

      <div class="odds-container">
        <button 
          class="odds-button" 
          onclick={`selectOdd('${event.id}', '${event.teamA}', ${event.odds.teamA}, '1')`}
        >
          <span class="option">{event.teamA}</span>
          <span class="odds">{event.odds.teamA}</span>
        </button>
        
        <button 
          class="odds-button" 
          onclick={`selectOdd('${event.id}', 'Empate', ${event.odds.draw}, 'X')`}
        >
          <span class="option">Empate</span>
          <span class="odds">{event.odds.draw}</span>
        </button>
        
        <button 
          class="odds-button" 
          onclick={`selectOdd('${event.id}', '${event.teamB}', ${event.odds.teamB}, '2')`}
        >
          <span class="option">{event.teamB}</span>
          <span class="odds">{event.odds.teamB}</span>
        </button>
      </div>
    </div>
  ))}
</div>

<script>
// Funci√≥n para seleccionar una cuota
window.selectOdd = function(eventId, option, odds, type) {
  console.log('üéØ Cuota seleccionada:', { eventId, option, odds, type });
  
  // Crear objeto de apuesta
  const bet = {
    id: `${eventId}-${type}-${Date.now()}`,
    eventId: eventId,
    eventName: `${getTeamNames(eventId, type)}`,
    option: option,
    odds: odds,
    type: 'Sencilla',
    stake: 5000, // Valor por defecto
    timestamp: Date.now()
  };
  
  // Disparar evento personalizado
  window.dispatchEvent(new CustomEvent('oddsSelected', {
    detail: bet
  }));
  
  // Tambi√©n disparar evento gen√©rico de selecci√≥n
  window.dispatchEvent(new CustomEvent('betSelection', {
    detail: bet
  }));
};

// Funci√≥n helper para obtener nombres de equipos
function getTeamNames(eventId, type) {
  // En una implementaci√≥n real, esto vendr√≠a de los datos del evento
  const eventMap = {
    '1': { teamA: 'Deportes Tolima', teamB: 'Independiente Santa Fe' },
    '2': { teamA: 'Millonarios', teamB: 'Atl√©tico Nacional' }
  };
  
  const event = eventMap[eventId];
  if (!event) return 'Partido Desconocido';
  
  return `${event.teamA} vs ${event.teamB}`;
}
</script>

