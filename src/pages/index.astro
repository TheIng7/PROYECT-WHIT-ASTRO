---
// src/pages/index.astro
import MainLayout from '../layouts/MainLayout.astro';
import Welcome from '../components/Welcome.astro';
import { userStore } from '../stores/userStore';
---

<MainLayout>
  <Welcome />
  
  
</MainLayout>

<style>
  .dashboard {
    padding: 2rem 0;
  }
  
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }
  
  .stat-card {
    background: linear-gradient(135deg, #1e3c72, #2a5298);
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
    color: white;
  }
  
  .stat-value {
    font-size: 2rem;
    font-weight: bold;
    margin-top: 0.5rem;
  }
  
  .quick-actions h2 {
    margin-bottom: 1.5rem;
    color: white;
  }
  
  .actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }
  
  .action-card {
    background: #2a2a2a;
    padding: 2rem 1rem;
    border-radius: 12px;
    text-align: center;
    text-decoration: none;
    color: white;
    transition: transform 0.3s;
    border: 2px solid transparent;
  }
  
  .action-card:hover {
    transform: translateY(-5px);
    border-color: #00c853;
  }
  
  .action-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
</style>